    document.getElementById('radtravel1').onchange = displayTextBox;
    document.getElementById('radtravel2').onchange = displayTextBox;

    var textBox = document.getElementById('travelfee');

    function displayTextBox(evt) {
        if (evt.target.value === "1") {
            textBox.disabled = false;
            $('#travelfee').attr("placeholder", "Enter Trave fees per day");
        }
        else if (evt.target.value === "2") {
            textBox.disabled = false;
            $('#travelfee').attr("placeholder", "Enter Trave fees per month");
        }
        else {
            textBox.disabled = true;
        }
    }

</script>
